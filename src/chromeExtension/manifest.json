{
  "name": "Funda Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Adds helpful info to Funda pages",
  "permissions": [
    "activeTab",
    "storage",
    "https://gq4qc1c0fa.execute-api.eu-west-1.amazonaws.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.funda.nl/koop/*/*",
        "https://www.funda.nl/koop/*/*/*",
        "https://www.funda.nl/en/koop/*/*",
        "https://www.funda.nl/en/koop/*/*/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en"
}
