{
  "name": "Funda Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Adds helpful info to Funda pages",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.funda.nl/koop/*/*",
        "https://www.funda.nl/koop/*/*/*",
        "https://www.funda.nl/en/koop/*/*",
        "https://www.funda.nl/en/koop/*/*/*"
      ],
      "js": ["content.js"]
    }
  ]
}
